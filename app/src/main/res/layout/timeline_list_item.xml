<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_small_marker"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:line="@color/colorPrimary"
        app:linePadding="5dp"
        app:lineSize="1dp"
        app:markerSize="10dp" />

    <ImageView
        android:id="@+id/icon_timeline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/date_timeline"
        android:layout_alignTop="@+id/amount_timeline"
        android:src="@drawable/wallet" />

    <TextView
        android:id="@+id/date_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeline_small_marker"
        android:layout_toStartOf="@+id/name_subtitle_timeline"
        android:fontFamily="@font/varela_round"
        android:text="07 Dec 2017"
        android:layout_marginTop="7dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/name_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_subtitle_timeline"
        android:layout_marginEnd="76dp"
        android:layout_toStartOf="@+id/amount_timeline"
        android:fontFamily="@font/varela_round"
        android:text="CREDIT RECEIVED"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_subtitle_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:layout_above="@+id/date_timeline"
        android:textSize="12sp"
        android:layout_alignStart="@+id/name_timeline"
        android:text="From MeteorPlay" />

    <TextView
        android:id="@+id/amount_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_subtitle_timeline"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/varela_round"
        android:text="â‚¹1.49"
        android:textColor="#0f8e12"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>